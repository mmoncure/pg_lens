{
	"name": "pglens",
	"description": "A language server for pgsql built on a treesitter implementation",
	"author": "maximjov && mmoncure",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/mmoncure/pg_lens/blob/lsp-in"
	},
	"categories": [],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:sql"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration":[
			{
				"title": "PG Lens",
				"properties": {
					"pgLens.pguser": {
						"type": "string",
						"default": "postgres",
						"description": "pg username"
					},
					"pgLens.pgpass": {
						"type": "string",
						"default": "admin",
						"description": "pg password"
					},
					"pgLens.pghost": {
						"type": "string",
						"default": "localhost",
						"description": "pg host"
					},
					"pgLens.pgport": {
						"type": "string",
						"default": "5432",
						"description": "pg port"
					}
					,"pgLens.dbname": {
						"type": "string",
						"default": "postgres",
						"description": "db name"
					}
				}
			}
		],
		"configurationDefaults": {
			"editor.semanticTokenColorCustomizations": {
				"rules": {
					"comment": "#636363",
					"type": "#d16969",
					"keyword": "#c586c0",
					"identifier":"#9cdcfe",
					"literalStr":"#ce9178",
					"literalNum":"#b5cea8"
				}
			}
		},
		  "languages": [
			{
				"id": "sql",
				"aliases": ["SQL"],
				"extensions": [".sql"],
				"configuration": "./language-configuration.json"
			}
		],
		"activationEvents": [
			"onLanguage:sql"
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20",
		"eslint": "^9.13.0",
		"mocha": "^10.3.0",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0"
	},
	"dependencies": {
		"@maximjov/tree-sitter-sql": "^0.4.0",
		"dotenv": "^17.1.0",
		"pg": "^8.16.3",
		"tree-sitter": "^0.21.1"
	}
}
